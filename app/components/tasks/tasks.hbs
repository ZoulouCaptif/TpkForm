<div class="w-screen h-screen flex justify-center items-center font-mono" >
  <div class="flex flex-col justify-center items-center rounded-lg border-2 border-indigo-500 p-2 w-1/2 bg-customcolor1 text-customcolortext1">
    <h1>ToDoList</h1>
    <div>
      <Tasks::Messagewhentaskaded::Messagewhentaskaded @bannerMessage={{this.bannerMessage}} @bannerBgColor={{this.bannerBgColor}} @added={{this.isAdded}} @setadded={{this.setadded}}/>
    </div>
    <div>
      <Tasks::TaskComponent::TaskComponent @taskname={{this.taskname}} @date={{this.date}} @changedata={{this.changedata}} @changedate={{this.changedate}} @add={{this.add}}/>
    </div>
    <div {{did-insert this.updateTasksTab}}>
      <Tasks::Calendarcomponent::Calendarcomponent @filterByAll={{this.filterByAll}} @filterByPending={{this.filterByPending}} @filterByCompleted={{this.filterByCompleted}} @suppalltask={{this.SuppAllTask}}/>
      <Tasks::TabComponent::TabComponent @tasks={{this.allTasks}} @changeStatus={{this.changeStatus}} @suppTask={{this.SuppTask}} @modify={{this.modify}} />
    </div>
  </div>
</div>
