<tr>
        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
          {{@task.name}}
        </td>
        <td class="px-6 py-4 whitespace-nowrap text-sm">
          {{@task.date}}
        </td>
        <td class="px-6 py-4 whitespace-nowrap text-sm">
          {{this.status }}
        </td>
        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
          {{!-- <img src="../../public/assets/images/coche.png" alt="">
          <img src="../../public/assets/images/corbeille.png" alt="">
          <img src="../../public/assets/images/crayon.png" alt=""> --}}
          <button class="bg-checkedGreen hover:bg-green-700 text-white font-bold py-2 px-4 rounded" type="button"{{on "click" (fn @changeStatus @task)}} >coche</button>
          <button class="bg-crayon hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" type="button" > crayon</button>
          <button class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" type="button"{{on "click" (fn @suppTask @task)}}  > corbeille </button>
        </td>
      </tr>